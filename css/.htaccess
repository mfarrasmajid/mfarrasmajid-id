# Protection for CSS directory
# Disable directory listing
Options -Indexes

# Protect against directory traversal
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} (\.\.\/|\.\.\\)
    RewriteRule .* - [F,L]
</IfModule>

# Allow CSS files to be served
<FilesMatch "\.(css|map)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
